    <form action="/login" method="post">
        
            <div class="register">
                <div>
                    <h1  class="pageTitle" >Login <img src="/images/lock.svg" alt="" style="width:100px"></h1> 
                </div>
                <br>
                <% if(joiError) { %>
         
                  <div class="alert alert-danger" style="color: red;" role="alert">
                    <%= joiError.error.message%>
                    </div>
             
          <% } %>
     
                <br>
                <div class="col-md-4">
                    <label for="validationCustomUsername" class="form-label">Email</label>
                    <div class="input-group has-validation">
                      <span class="input-group-text" id="inputGroupPrepend">@</span>
                      <input type="text" class="form-control" id="validationCustomUsername" placeholder="example@123.com" aria-describedby="inputGroupPrepend" name="email" required>
                      <div class="invalid-feedback">
                      </div>
                    </div>
                  </div>         
                  <form class="row g-3 needs-validation" novalidate>
                    <div class="col-md-4">
                      <label for="validationCustom01" class="form-label">Password</label>
                      <input type="password" class="form-control" id="validationCustom01"  name="password" placeholder="Enter password"required>
                      <div class="valid-feedback">
                      </div>
                    </div> 
            
            <br>
           <button class="btn btn-warning">login</button>
    </form>
</div>



